<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.text.Text ?>
<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.CheckBox ?>
<?import javafx.scene.control.ComboBox ?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" fx:controller="GO_APP.pages.parametres.VueParametres">

	<VBox>
		<HBox alignment="center">
			<Text textAlignment="CENTER" text="Taille de la grille?" />
		</HBox>
		<HBox alignment="center">
			<ComboBox fx:id="choixTaille" />
		</HBox>

		<HBox alignment="center">
			<Text textAlignment="CENTER" text="Qui commence?" />
		</HBox>

		<VBox>
			<HBox alignment="center">
				<Button fx:id="caseBLANC" />
				<CheckBox fx:id="checkBLANC" />
			</HBox>

			<HBox alignment="center">
				<Button fx:id="caseNOIR" />
				<CheckBox fx:id="checkNOIR" />
			</HBox>

		</VBox>
	</VBox>

	<HBox alignment="center">
		<Button text="Sauvegarder" fx:id="boutonOk" />
		<Button text="Annuler" fx:id="boutonOk" />
	</HBox>
</VBox>